all             :; DAPP_BUILD_OPTIMIZE=1 DAPP_BUILD_OPTIMIZE_RUNS=200 dapp --use solc:0.8.13 build
clean           :; dapp clean
test            :; ./test.sh $(match) $(runs)
cov             :; DAPP_BUILD_OPTIMIZE=1 DAPP_BUILD_OPTIMIZE_RUNS=200 dapp --use solc:0.8.13 test -v --coverage --cov-match "src\/Wormhole"
certora-fee     :; certoraRun --solc ~/.solc-select/artifacts/solc-0.8.13 --solc_args "['--optimize','--optimize-runs','200']" src/WormholeConstantFee.sol --verify WormholeConstantFee:certora/WormholeConstantFee.spec $(if $(rule),--rule $(rule),) --multi_assert_check --short_output --staging
certora-join    :; certoraRun --solc ~/.solc-select/artifacts/solc-0.8.13 --solc_args "['--optimize','--optimize-runs','200']" src/WormholeJoin.sol certora/FeesMock.sol certora/Auxiliar.sol src/test/mocks/VatMock.sol src/test/mocks/DaiMock.sol src/test/mocks/DaiJoinMock.sol --link WormholeJoin:vat=VatMock WormholeJoin:daiJoin=DaiJoinMock DaiJoinMock:vat=VatMock DaiJoinMock:dai=DaiMock --verify WormholeJoin:certora/WormholeJoin.spec $(if $(rule),--rule $(rule),) --multi_assert_check --short_output --staging
certora-router  :; certoraRun --solc ~/.solc-select/artifacts/solc-0.8.13 --solc_args "['--optimize','--optimize-runs','200']" src/WormholeRouter.sol certora/WormholeJoinMock.sol src/test/mocks/DaiMock.sol --link WormholeRouter:dai=DaiMock --verify WormholeRouter:certora/WormholeRouter.spec $(if $(rule),--rule $(rule),) --multi_assert_check --short_output --staging
certora-oracle  :; certoraRun --solc ~/.solc-select/artifacts/solc-0.8.13 --solc_args "['--optimize','--optimize-runs','200']" src/WormholeOracleAuth.sol certora/WormholeJoinMock.sol certora/Auxiliar.sol --link WormholeOracleAuth:wormholeJoin=WormholeJoinMock Auxiliar:oracle=WormholeOracleAuth --verify WormholeOracleAuth:certora/WormholeOracleAuth.spec --loop_iter 10 $(if $(rule),--rule $(rule),) --multi_assert_check --short_output --staging
